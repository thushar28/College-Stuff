package com.example.cs173calculator;

import androidx.appcompat.app.AppCompatActivity;

import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.Toast;

import java.util.regex.Pattern;

public class MainActivity extends AppCompatActivity implements View.OnClickListener
{
    Button btn1;
    Button btn2;
    Button btn3;
    Button btn4;
    Button btn5;
    Button btn6;
    Button btn7;
    Button btn8;
    Button btn9;
    Button btn0;
    Button btnm;
    Button btnmi;
    Button btnplus;
    Button btndo;
    Button btnd;
    Button btnc;
    Button btneq;
    EditText edittxt;

    @Override
    protected void onCreate(Bundle savedInstanceState)
    {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);
        btn1=(Button)findViewById(R.id.btn1);
        btn1.setOnClickListener(this);
        btn2=(Button)findViewById(R.id.btn2);
        btn2.setOnClickListener(this);
        btn3=(Button)findViewById(R.id.btn3);
        btn3.setOnClickListener(this);
        btn4=(Button)findViewById(R.id.btn4);
        btn4.setOnClickListener(this);
        btn5=(Button)findViewById(R.id.btn5);
        btn5.setOnClickListener(this);
        btn6=(Button)findViewById(R.id.btn6);
        btn6.setOnClickListener(this);
        btn7=(Button)findViewById(R.id.btn7);
        btn7.setOnClickListener(this);
        btn8=(Button)findViewById(R.id.btn8);
        btn8.setOnClickListener(this);
        btn9=(Button)findViewById(R.id.btn9);
        btn9.setOnClickListener(this);
        btn0=(Button)findViewById(R.id.btn0);
        btn0.setOnClickListener(this);
        btnc=(Button)findViewById(R.id.btnc);
        btnc.setOnClickListener(this);
        btnd=(Button)findViewById(R.id.btnd);
        btnd.setOnClickListener(this);
        btndo=(Button)findViewById(R.id.btndo);
        btndo.setOnClickListener(this);
        btnm=(Button)findViewById(R.id.btnm);
        btnm.setOnClickListener(this);
        btnmi=(Button)findViewById(R.id.btnmi);
        btnmi.setOnClickListener(this);
        btnplus=(Button)findViewById(R.id.btnplus);
        btnplus.setOnClickListener(this);
        btneq=(Button)findViewById(R.id.btneq);
        btneq.setOnClickListener(this);
        edittxt=(EditText)findViewById(R.id.edittxt);
        edittxt.setOnClickListener(this);
        edittxt.setText("");
    }

    @Override
    public void onClick(View v)
    {
        if(v.equals(btn1))
            edittxt.append("1");
        if(v.equals(btn2))
            edittxt.append("2");
        if(v.equals(btn3))
            edittxt.append("3");
        if(v.equals(btn4))
            edittxt.append("4");
        if(v.equals(btn5))
            edittxt.append("5");
        if(v.equals(btn6))
            edittxt.append("6");
        if(v.equals(btn7))
            edittxt.append("7");
        if(v.equals(btn8))
            edittxt.append("8");
        if(v.equals(btn9))
            edittxt.append("9");
        if(v.equals(btn0))
            edittxt.append("0");
        if(v.equals(btnm))
            edittxt.append("x");
        if(v.equals(btnmi))
            edittxt.append("-");
        if(v.equals(btnplus))
            edittxt.append("+");
        if(v.equals(btndo))
            edittxt.append(".");
        if(v.equals(btnd))
            edittxt.append("รท");
        if(v.equals(btnc))
            edittxt.setText("");
        if(v.equals(btneq))
        {
            try
            {
                String data =edittxt.getText().toString();
                if(data.contains("รท"))
                {
                    div(data);
                }
                else if(data.contains("+"))
                {
                    add(data);
                }
                else if(data.contains("-"))
                {
                    sub(data);
                }
                else if(data.contains("x")) {
                    mul(data);
                }
            }
            catch(Exception e)
            {
                displayInvalidMessage("Invalid Input");
            }

        }

    }

    private void mul(String data)
    {
        String[] operands=data.split(Pattern.quote("x"));
        if(operands.length==2)
        {
            double operand1=Double.parseDouble(operands[0]);
            double operand2=Double.parseDouble(operands[1]);
            double Result=operand1*operand2;
            edittxt.setText(String.valueOf(Result));
        }
        else
        {
            displayInvalidMessage("Invalid Input");
        }
    }

    private void sub(String data)
    {
        String[] operands=data.split(Pattern.quote("-"));
        if(operands.length==2)
        {
            double operand1=Double.parseDouble(operands[0]);
            double operand2=Double.parseDouble(operands[1]);
            double Result=operand1-operand2;
            edittxt.setText(String.valueOf(Result));
        }
        else
        {
            displayInvalidMessage("Invalid Input");
        }
    }

    private void add(String data)
    {
        String[] operands=data.split(Pattern.quote("+"));
        if(operands.length==2)
        {
            double operand1=Double.parseDouble(operands[0]);
            double operand2=Double.parseDouble(operands[1]);
            double Result=operand1+operand2;
            edittxt.setText(String.valueOf(Result));
        }
        else
        {
            displayInvalidMessage("Invalid Input");
        }
    }

    private void displayInvalidMessage(String invalid_input)
    {
        Toast.makeText(getBaseContext(),invalid_input,Toast.LENGTH_LONG).show();
    }

    private void div(String data)
    {
        String[] operands=data.split(Pattern.quote("รท"));
        if(operands.length==2)
        {
            double operand1=Double.parseDouble(operands[0]);
            double operand2=Double.parseDouble(operands[1]);
            double Result=operand1/operand2;
            edittxt.setText(String.valueOf(Result));
        }
        else
        {
            displayInvalidMessage("Invalid Input");
        }
    }
}
